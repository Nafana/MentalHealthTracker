<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Yoga">



    <ImageView
        android:id="@+id/yogaImageView"
        android:layout_width="414dp"
        android:layout_height="321dp"
        android:layout_marginTop="175dp"
        android:layout_marginBottom="176dp"
        android:contentDescription="@string/yogaImageContentDescription"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/countdownTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="38dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yogaImageView" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="122dp"
        android:layout_height="64dp"
        android:layout_marginTop="155dp"
        android:layout_marginBottom="15dp"
        android:onClick="buttonClicked"
        android:text="@string/yogaStartButtonText"
        app:layout_constraintBottom_toTopOf="@+id/yogaImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.896"
        app:strokeColor="#FFFFFF"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/yogaTextView"
        android:layout_width="354dp"
        android:layout_height="124dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="39dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/yogaHeaderText"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="#3F51B5"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/startButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/poseNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="45dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#2196F3"
        app:layout_constraintBottom_toTopOf="@+id/countdownTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yogaImageView" />

    <TextView
        android:id="@+id/initialCountdownTextView"
        android:layout_width="199dp"
        android:layout_height="167dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="#070000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/getReadyTextView"
        android:layout_width="254dp"
        android:layout_height="63dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#00090B"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/initialCountdownTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startButton" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/mStepSkipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="339dp"
        android:layout_marginLeft="339dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:contentDescription="@string/mindfulnessSkipButtonContentDesc"
        android:focusable="true"
        app:backgroundTint="#673AB7"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:fabSize="normal"
        app:hoveredFocusedTranslationZ="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yogaImageView"
        app:rippleColor="@color/purple_500"
        app:srcCompat="@drawable/ic_baseline_arrow_forward_24"
        app:tint="#FFFFFF" />

