<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="384dp"
        android:layout_height="726dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/welcomeMsg"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:autofillHints="@string/app_name"
            android:background="#677CF4"
            android:clickable="false"
            android:gravity="center"
            android:hint="@string/app_name"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/letsGetStarted"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="#F4C63B"
            android:gravity="center"
            android:text="@string/getStarted"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/yogaButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/yoga"
                app:backgroundTint="#677CF4" />

            <TextView
                android:id="@+id/YogaInfo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/yogaDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/playMusicButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/playmusic"
                app:backgroundTint="#F4C63B" />

            <TextView
                android:id="@+id/MusicInfo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/musicDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/moodTrackerButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/moodtracker"
                app:backgroundTint="#677CF4" />

            <TextView
                android:id="@+id/MoodTrackerInfo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/moodtrackerDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/breathingExButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/breathingexercises"
                app:backgroundTint="#F4C63B" />

            <TextView
                android:id="@+id/BreathingExercisesInfo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/breathingexercisesDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/mindfulnessButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/mindfulness"
                app:backgroundTint="#677CF4" />

            <TextView
                android:id="@+id/MindfulnessInfo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/mindfulnessDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/exercisesButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/exercises"
                app:backgroundTint="#F4C63B" />

            <TextView
                android:id="@+id/exercisesInfo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/exercisesDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/moreResourcesButton"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="@string/moreresources"
                app:backgroundTint="#677CF4" />

            <TextView
                android:id="@+id/moreresourceInfo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/moreresourcesDescription" />
        </LinearLayout>

        <TextView
            android:id="@+id/favResources"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#F4C63B"
            android:gravity="center"
            android:text="@string/favourites"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/favourite1Button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/favourites1"
                android:textColor="#FAF7F7"
                android:textSize="12sp"
                app:backgroundTint="#677CF4" />

            <Button
                android:id="@+id/favourite2Button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/favourites2"
                android:textColor="#FAF6F6"
                android:textSize="12sp"
                app:backgroundTint="#F4C63B" />

            <Button
                android:id="@+id/favourite3Button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/favourites3"
                android:textColor="#FAF8F8"
                android:textSize="12sp"
                app:backgroundTint="#677CF4" />

            <Button
                android:id="@+id/editFavouritesButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/editFav"
                android:textColor="#FAF8F8"
                android:textSize="12sp"
                app:backgroundTint="#F4C63B" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>