<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mentalhealthtracker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MentalHealthTracker">
        <activity
            android:name=".Yoga"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".music.PlayMusic"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mood_tracker.MoodTracker"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".BreathingExercises"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".mindfulness.Mindfulness"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Exercises"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MoreResources"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".WebSupportArticles.WebSupportArticles"
            android:parentActivityName=".MoreResources" />
        <activity
            android:name=".WebSupportArticles.WebSupportArticleView"
            android:parentActivityName=".WebSupportArticles.WebSupportArticles"
            android:launchMode="singleTop"
            />
        <activity
            android:name=".WebSupportArticles.WebSupportArticleDisplay"
            android:parentActivityName=".WebSupportArticles.WebSupportArticleView"
            />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MentalHealthTracker.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mindfulness.MindfulnessInteractive"
            android:parentActivityName=".mindfulness.Mindfulness" />
        <activity
            android:name=".Meditation"
            android:parentActivityName=".MoreResources" />
        <activity
            android:name=".ConnectCounsellors"
            android:parentActivityName=".MoreResources" />
        <activity
            android:name=".ViewStatistics"
            android:parentActivityName=".MoreResources" />
    </application>

</manifest>